@model MicroBusiness.Models.BusinessViewModel


@{
    ViewBag.Title = "Customer";
}

<h1>Database</h1>

<form asp-action = "Customer" method="get">
    <div class = "form-actions no-color">
        <P>
            Find by Name: <input type ="text" name="SearchString" value="@ViewData["currentFilter"]"/>
            
            
            <input type = "Submit" value = "Search" class = "btn btn-default"/> |
            <a asp-action ="Customer">Back to Full List</a>
        </P>
    </div>
</form>

<table class = "table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customerModel.FirstOrDefault().FirstName) <a asp-action = "Customer" asp-route-sortOrder = "@ViewData["FirstNameSortParm"]">&#8645</a> 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customerModel.FirstOrDefault().LastName) 
        <th>
            @Html.DisplayNameFor(model => model.customerModel.FirstOrDefault().City) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customerModel.FirstOrDefault().Country) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.customerModel.FirstOrDefault().Phone)
        </th>
    </tr>

    @foreach (var item in Model.customerModel)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
        </tr>
        
    }
</table>